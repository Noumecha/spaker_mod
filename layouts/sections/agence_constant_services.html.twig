{% if content %}
	<section {{attributes.addClass('ac-nos-services')}}>

		<div class="container-fluid p-0">
			<div class="row no-gutters">
				<div class="col-0 col-md-4 d-none d-lg-block">
					{% if content.image %}
						<div class="ac-column-image">
							{{content.image|layout_value}}
						</div>
					{% endif %}

				</div>
				<div class="col-lg-8 ml-auto">
					<div class="ac-nos-services--content">
						<div class="ac-content">
							<div class="ac-left-header">
								{% if content.sub_title %}
									<div class="ac-first-title">
										{{content.sub_title}}
									</div>
								{% endif %}
								{% if content.title %}
									<h2 class="ac-head-title">
										{{content.title}}
									</h2>
								{% endif %}
								{% if content.desc %}
									<div class="ac-text-descriptor">
										{{content.desc}}
									</div>
								{% endif %}

							</div>


							{% if content.contenu %}
								{{content.contenu}}
							{% endif %}

						</div>
					</div>
				</div>
			</div>

		</div>

	</section>

{% endif %}